<!DOCTYPE html>
<html>
<head>
  <title>StudyBuddy</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Oswald:700,300" %>
  <%= stylesheet_link_tag "https://fonts.googleapis.com/css?family=Karma:400,700" %>
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">StudyBuddy</a></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <%- if current_user -%>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
        <%- else -%>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <%- end -%>
      </ul>
    </section>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash <%= key %> alert-box" data-alert>
      <%= value %>
      <a href="#" class="close">&times;</a>
    </div>
  <%- end -%>

  <div class="row">
    <div class="column">
      <%= yield %>
    </div>
  </div>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>

</body>
</html>
