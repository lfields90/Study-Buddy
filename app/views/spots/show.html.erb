<div class="row">
  <div class="large-12">
    <h2> <%= @spot.name %> </h2>
    <ul>
      <li>Description: <%= @spot.description %></li>
      <li>Category: <%= @spot.category %></li>
      <li>Address: <%= @spot.address %></li>
      <li>City: <%= @spot.city %></li>
      <li>State: <%= @spot.state %></li>
      <li>Zip Code: <%= @spot.zip_code %></li>
      <li>Website: <%= @spot.website_url %></li>
      <li>Photo: <%= @spot.photo_url %></li>
      <li>Phone: <%= @spot.phone %></li>
    </ul>

    <h2>Reviews!</h2>
    <% x = 0 %>
    <% @reviews.each do |review| %>
      <ul>
        <div class='spot_number' style="visibility: hidden"><%= @spot.id %></div>
        <div class='review_number' style="visibility: hidden"><%= review.id %></div>
        <li>Rating: <%= review.rating %></li>
        <li>Review: <%= review.body %></li>
        <p>Total votes: <strong class='votes'><%= review.vote_count %></strong></p>
        <button onclick = upvote(<%= x %>)>Upvote</button>
        <button onclick = downvote(<%= x %>)>Downvote</button>
      </ul>
      <% x += 1 %>
    <% end %>

    <%= link_to "Home", spots_path %>
    <%= link_to "Add a Review", new_spot_review_path(@spot) %>
  </div>
</div>
